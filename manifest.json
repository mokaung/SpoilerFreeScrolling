{
    "manifest_version": 3,
    "name": "Spoiler Blocker",
    "version": "0.1.0",
    "description": "AI-powered spoiler detection for Twitter/X",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["https://x.com/*"],
    "background": {
      "service_worker": "src/background/index.ts",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["src/content/index.ts"]
      }
    ],
    "action": {
      "default_popup": "index.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }