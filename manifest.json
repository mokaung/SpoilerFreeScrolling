{
  "manifest_version": 3,
  "name": "Spoiler Blocker",
  "version": "0.1.0",
  "description": "AI-powered spoiler detection for Twitter/X. Add what you've been reading or watching and automatically block spoilers in your twitter/X feed! Created by Kevin Mo.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["src/content/index.ts"]
    }
  ],
  "action": { "default_title": "Open Spoiler Blocker", "default_popup": "popup.html" },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
